{
  "name": "next-15-typescript-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p ${PORT:-3000}",
    "build": "cross-env NODE_ENV=production next build",
    "start": "cross-env NODE_ENV=production next start -p ${PORT:-3000}",
    "lint": "next lint",
    "format": "prettier --write .",
    "test": "cross-env NODE_ENV=test jest --config jest.config.mjs",
    "test:watch": "cross-env NODE_ENV=test jest --watch --config jest.config.mjs",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.69.0",
    "axios": "^1.8.4",
    "next": "15.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
